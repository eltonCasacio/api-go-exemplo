{
    "swagger": "2.0",
    "info": {
        "description": "API de produto com autenticação (JWT)",
        "title": "Go API Example",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Elton Casacio",
            "url": "https://www.instagram.com/elton_casacio/",
